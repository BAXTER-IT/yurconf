<?xml version="1.0" encoding="UTF-8"?>
<document xmlns="http://maven.apache.org/changes/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">

    <body>
    
        <release version="1.4.0.2" date="2013-11-29" description="Packaging improvements">

            <action type="fix" issue="CFG-48" date="2013-11-27" dev="ykryshchuk">
                Logging config file has been extracted from WAR file.
                After installing the package please create a symlink from one of the available log config files as 
                configuration-server-log.xml in the same directory.
            </action>
            
            <action type="fix" issue="PE-3856" date="2013-11-27" dev="ykryshchuk">
                Logging jars have been extracted to separate packages. Now can switch between logback and log4j.
            </action>
            
        </release>


        <release version="1.4" date="2013-11-15" description="Maintenance release">

            <action type="update">
                Renamed the packages to prefix "baxter-". RPM Packages renamed to -std- and -alt- cases.
            </action>

        </release>

        <release version="1.3.7.5" date="2013-11-15" description="Maintenance release">

            <action type="fix" issue="PE-3911" date="2013-11-15" dev="ykryshchuk">
                Standard package with linux service script.
            </action>

        </release>

        <release version="1.3.7.4" date="2013-10-31" description="Maintenance release">

            <action type="fix" issue="PE-3839" date="2013-10-31" dev="ykryshchuk">
                Support for read-only repositories.
            </action>

            <action type="fix" issue="PE-3858" date="2013-10-31" dev="ykryshchuk">
                Improved startup scripts.
            </action>

        </release>

        <release version="1.3.7.3" date="2013-10-25" description="Improvements">

            <action type="fix" issue="PE-3810" date="2013-10-25" dev="ykryshchuk">
                Added start/stop wrapper scripts for config
                server.
            </action>

            <action type="fix" issue="PE-935" date="2013-10-25" dev="ykryshchuk">
                Fixed variants handling in conf:reference
                elements.
            </action>

        </release>

        <release version="1.3.7.2" date="2013-10-03" description="Santander fix">

            <action type="add" issue="SANPRJ-828" dev="ykryshchuk" due-to="SAN">
                Added support for generic log
                appenders.
            </action>

        </release>

        <release version="1.3.7" date="2013-09-24" description="Config Viewer">

            <action type="add" issue="CFG-43" dev="ykryshchuk" system="JIRA">
                Implemented simple config viewer at
                "/config-server/view" path.
            </action>

        </release>

    </body>

</document>
