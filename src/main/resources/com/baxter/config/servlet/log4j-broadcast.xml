		<param name="MaxFileSize" value="100MB" />
		<param name="MaxBackupIndex" value="5" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[%d{ISO8601}] %c - %m%n" />
		</layout>
	</appender>

	<appender name="ASYNC_JBossMQ" class="org.apache.log4j.AsyncAppender">
		<appender-ref ref="FILE_JBossMQ" />
	</appender>

	<appender name="FILE_JBossMQ" class="org.apache.log4j.RollingFileAppender">
		<param name="File" value="${pe.devel.logs.dir}/JBossMQ.log" />
		<param name="MaxFileSize" value="100MB" />
		<param name="MaxBackupIndex" value="5" />
