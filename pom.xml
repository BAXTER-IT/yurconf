<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>com.baxter</groupId>
		<artifactId>parent</artifactId>
		<version>1.0.13</version>
	</parent>

	<groupId>com.baxter.config</groupId>
	<artifactId>baxter-config</artifactId>
	<version>1.1.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>Baxter Configuration</name>

	<description>
	  Baxter Configuration project. 
	  It consists of several modules, which are: Client API, Web Application and Products Connectors.
	</description>

	<url>http://qa/products/configuration</url>

	<inceptionYear>2011</inceptionYear>

	<scm>
		<developerConnection>scm:svn:svn://svn/pe/baxter-config/trunk</developerConnection>
		<connection>scm:svn:svn://svn/pe/baxter-config/trunk</connection>
	</scm>

	<issueManagement>
		<system>JIRA</system>
		<url>http://jira.baxter-fx.com/jira/BrowseProject.jspa?id=10320</url>
	</issueManagement>

	<licenses>
		<license>
			<name>Baxter</name>
			<url>http://baxter.com/licenses/BAXTER-CONFIG-1.0.txt</url>
			<comments>Some comments to a license</comments>
			<distribution>manual</distribution>
		</license>
	</licenses>

	<distributionManagement>
		<site>
			<id>qa-apache</id>
			<url>scp://192.168.9.171/var/www/products/configuration</url>
		</site>
	</distributionManagement>

	<build>

		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-site-plugin</artifactId>
					<configuration>
						<reportPlugins combine.children="append">
							<plugin>
								<groupId>org.apache.maven.plugins</groupId>
								<artifactId>maven-javadoc-plugin</artifactId>
								<version>2.8.1</version>
								<reportSets>
									<reportSet>
										<id>prod-classes</id>
										<configuration>
											<show>package</show>
										</configuration>
										<reports>
											<report>javadoc</report>
										</reports>
									</reportSet>
								</reportSets>
							</plugin>
						</reportPlugins>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.mortbay.jetty</groupId>
					<artifactId>maven-jetty-plugin</artifactId>
					<version>6.1.26</version>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>chronos-jmeter-maven-plugin</artifactId>
					<version>${chronos.version}</version>
					<configuration>
						<jMeterRemoteLocation>${jmeter.download.url}</jMeterRemoteLocation>
						<jmeterhome>${jmeter.home}</jmeterhome>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>chronos-report-maven-plugin</artifactId>
					<version>${chronos.version}</version>
				</plugin>
				<!--This plugin's configuration is used to store Eclipse m2e settings 
					only. It has no influence on the Maven build itself. -->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.codehaus.mojo</groupId>
										<artifactId>jaxb2-maven-plugin</artifactId>
										<versionRange>[1.5,)</versionRange>
										<goals>
											<goal>schemagen</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute />
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>org.apache.maven.plugins</groupId>
										<artifactId>maven-dependency-plugin</artifactId>
										<versionRange>[2.2,)</versionRange>
										<goals>
											<goal>unpack</goal>
											<goal>copy-dependencies</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<execute />
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>jaxb2-maven-plugin</artifactId>
					<version>1.5</version>
				</plugin>
			</plugins>
		</pluginManagement>

	</build>

	<modules>
		<module>config-client</module>
		<module>config-om</module>
		<module>config-processor</module>
		<module>config-processor-demo</module>
		<module>config-server</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>config-om</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>config-processor</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>config-processor-demo</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>config-server</artifactId>
				<type>war</type>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.8</version>
			</dependency>
			<dependency>
				<groupId>javax.servlet</groupId>
				<artifactId>servlet-api</artifactId>
				<version>2.5</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-api</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>org.slf4j</groupId>
				<artifactId>slf4j-log4j12</artifactId>
				<version>${slf4j.version}</version>
			</dependency>
			<dependency>
				<groupId>commons-io</groupId>
				<artifactId>commons-io</artifactId>
				<version>2.0.1</version>
			</dependency>
			<dependency>
				<groupId>commons-beanutils</groupId>
				<artifactId>commons-beanutils</artifactId>
				<version>1.8.3</version>
			</dependency>
			<dependency>
				<groupId>net.sf.saxon</groupId>
				<artifactId>saxon</artifactId>
				<version>${saxon.version}</version>
			</dependency>
			<dependency>
				<groupId>net.sf.saxon</groupId>
				<artifactId>saxon-dom</artifactId>
				<version>${saxon.version}</version>
			</dependency>
			<dependency>
				<groupId>net.sf.saxon</groupId>
				<artifactId>saxon-xpath</artifactId>
				<version>${saxon.version}</version>
			</dependency>
			<dependency>
				<groupId>org.powermock</groupId>
				<artifactId>powermock-api-mockito</artifactId>
				<version>1.4.9</version>
			</dependency>
			<dependency>
				<groupId>com.google.guava</groupId>
				<artifactId>guava-io</artifactId>
				<version>r03</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.powermock</groupId>
			<artifactId>powermock-api-mockito</artifactId>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>com.google.guava</groupId>
			<artifactId>guava-io</artifactId>
			<scope>test</scope>
		</dependency>
	</dependencies>

	<profiles>

		<profile>
			<id>DevDocus</id>
			<distributionManagement>
				<site>
					<id>qa-apache</id>
					<url>scp://qa/var/www/products/statistics-dev</url>
				</site>
			</distributionManagement>
		</profile>

	</profiles>

	<properties>
        <unix.application.group.name>Config</unix.application.group.name>
        <config.processors.lib.dir>/usr/share/configuration-processors</config.processors.lib.dir>
		<jira.onlyCurrentVersion>false</jira.onlyCurrentVersion>
		<jira.fixVersionIds>10406,10493,10503,11390</jira.fixVersionIds>
		<jira.sortColumnNames>Fix Version DESC</jira.sortColumnNames>
		<!-- SITE PROPERTIES. We can reference these properties from the site sources -->
		<releaseVersion>${project.version}</releaseVersion>
		<!-- SITE PROPERTIES END -->
		<saxon.version>8.9</saxon.version>
		<chronos.version>1.0-beta-3</chronos.version>
		<slf4j.version>1.6.1</slf4j.version>
		<jetty.version>8.1.0.RC4</jetty.version>
		<!-- To be overriden in settings.xml -->
		<jmeter.home>${project.basedir}/jmeter</jmeter.home>
		<jmeter.download.url>http://archive.apache.org/dist/jmeter/binaries/apache-jmeter-2.6.zip</jmeter.download.url>
	</properties>

</project>
