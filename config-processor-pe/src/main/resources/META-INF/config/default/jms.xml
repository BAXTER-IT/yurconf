    </topic>

    <queue id="abos.potPositionSenderQueueName" name="queue/potPositionSenderQueue" manager="abos">
        <c:component id="price-engine-blotterserver" />
    </queue>

    <queue id="abos.potPositionReceiverQueueName" name="queue/potPositionReceiverQueue" manager="abos">
