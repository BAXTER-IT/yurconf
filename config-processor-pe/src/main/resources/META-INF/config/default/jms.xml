    <queue id="diServerSenderQueue" name="DIServerSender" node="jms1" authentication="auth1"> </queue>

    <queue id="xmlManager.structurales2DB" name="Structurales2DB" node="jms1" authentication="auth1">
        <c:component id="price-engine-dbserver" />
    </queue>

    <queue id="xmlManager.db2Structurales" name="DB2Structurales" node="jms1" authentication="auth1">
        <c:component id="price-engine-dbserver" />
    </queue>

    <queue id="positionManager.client2PositionManagerServer" name="Client2PositionManagerServer" node="jms2"
        authentication="auth2">
        <c:component id="price-engine-broadcast" />
        <c:component id="price-engine-blotterserver" />
        <c:component id="price-engine-blotter" />
        <c:component id="price-engine-twserver" />
        <c:component id="price-engine-trackwheel" />
    </queue>

    <topic id="positionManager.positionManagerServer2Client" name="PositionManagerServer2Client" node="jms2"
