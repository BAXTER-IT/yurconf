<configuration xmlns="http://baxter-it.com/price-engine/conf/jms" xmlns:c="http://baxter-it.com/config/component"
    xmlns:conf="http://baxter-it.com/config">

    <!-- JMS Nodes -->

    <node id="jms1" host="localhost" port="4001" router="router1" />
    <node id="jms2" host="localhost" port="4002" router="router2" />
    <node id="jms3" host="localhost" port="4003" router="router3" />

    <authentication id="global" username="swiftadmin" password="adminadmin" />

    <authentication id="auth1" username="anonymous" password="" />
    <authentication id="auth2" username="anonymous" password="" />
    <authentication id="auth3" username="anonymous" password="" />

    <authentication id="handoff" username="testUser" password="test1" />

    <ssl id="jmsSSL" store="c:/swiftmq_7.5.4_licenced/scripts/win32/clientcerts" storePassword="secret1234"
        anonCipher="false" />

    <manager id="abos" namingContextFactory="org.jnp.interfaces.NamingContextFactory"
        providerUrl="jnp://abosfxcdev:1099" queueConnectionFactory="ConnectionFactory" />

    <!-- JMS Channels -->

    <queue id="toDb" name="DBRequest" node="jms1" authentication="auth1" compressed="true">
        <c:component id="price-engine-dbserver" />
        <c:component id="price-engine-broadcast" />
        <c:component id="price-engine-blotterserver" />
        <c:component id="price-engine-blotter" />
        <c:component id="price-engine-admintool" />
        <c:component id="price-engine-twserver" />
        <c:component id="price-engine-trackwheel" />
        <c:component id="price-engine-fwdcontroller" />
        <c:component id="price-engine-fwdmonitor" />
        <c:component id="price-engine-dashboardservlet" />
        <c:component id="price-engine-validator" />
    </queue>

    <topic id="broadcast" name="DBBroadcast" node="jms1" authentication="auth1">
        <c:component id="price-engine-dbserver" />
        <c:component id="price-engine-broadcast" />
        <c:component id="price-engine-blotter" />
        <c:component id="price-engine-admintool" />
        <c:component id="price-engine-twserver" />
        <c:component id="price-engine-trackwheel" />
        <c:component id="price-engine-fwdcontroller" />
        <c:component id="price-engine-fwdmonitor" />
        <c:component id="price-engine-validator" />
        <c:component id="price-engine-dashboardservlet" />
    </topic>

    <queue id="trade2Db" name="Trade2DB" node="jms3" authentication="auth1">
        <c:component id="price-engine-dbserver" />
        <c:component id="price-engine-broadcast" />
        <c:component id="price-engine-blotterserver" />
        <c:component id="dcpk-receiver" />
    </queue>

    <topic id="vendor2validator" name="Vendors2Validator" node="jms1" authentication="auth2"> 
        <c:component id="price-engine-validator" />
    </topic>

    <topic id="validator2tws" name="Validator2TWS" node="jms2" authentication="auth2">
        <c:component id="price-engine-twserver" />
        <c:component id="price-engine-validator" />
    </topic>

    <topic id="tws2manufacturer" name="TWS2Manufacturer" node="jms2" authentication="auth2">
        <c:component id="price-engine-broadcast" />
        <c:component id="price-engine-blotterserver" />
        <c:component id="price-engine-twserver" />
    </topic>

    <queue id="twc2tws" name="TWC2Server" node="jms2" authentication="auth2">
        <c:component id="price-engine-twserver" />
        <c:component id="price-engine-validator" />
    </queue>

    <topic id="tws2twc" name="TWS2Client" node="jms2" authentication="auth2">
        <c:component id="price-engine-twserver" />
        <c:component id="price-engine-trackwheel" />
    </topic>

    <topic id="vendor2fwdctrl" name="FwdSource2Controller" node="jms1" authentication="auth1">
        <c:component id="price-engine-fwdcontroller" />
    </topic>

    <topic id="vendor2fwdirctrl" name="FwdIRSource2Controller" node="jms1" authentication="auth1">
        <c:component id="price-engine-fwdircontroller" />
