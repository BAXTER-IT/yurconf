    </queue>

    <topic id="creditcheckmanager.heartbeat" name="CreditCheckHeartbeat" node="jms1" authentication="auth1">
        <c:component id="price-engine-broadcast" />
    </topic>

    <!-- TODO check price-engine-fwdircontroller, and other components. put here all the channels. if some are related to HA -->
    
    <topic id="handoffmanager.HandOff2Upstream" name="HandOff2Upstream" node="jms1" authentication="handoff">
        <!-- c:component id="price-engine-broadcast" /-->
    </topic>
    
    <queue id="dcpk.HandOffTestReceiver" name="HandOffTestReceiver" node="jms1" authentication="handoff">
